.container
    position absolute
    top $headerHeight
    bottom 50px
    left 0
    right 1px
    overflow-y auto

    &.scroll
        right 1px

.content
    background #FFF
    padding 25px
    margin 15px
    border 1px solid #dadada
    text-align center
    display none
    overflow-x hidden

    &.left-align
        text-align left

    &.active
        display block

    &.no-frame
        background none
        border none
        padding 0px

    h2
        font-size 20px
        margin-bottom 10px

    h3 + p
        margin-top 15px

        span
            font-weight 600

    &.split
        height 403px

    .left
        float left
        width 50%

    .margin-top
        margin-top 15px

    .right
        float right
        width 50%
        padding-left 20px

        p
            margin-top 98px


.divider
    height 1px
    background #dadada
    margin 20px 0
    width 100%
