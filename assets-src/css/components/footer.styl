.footer
    position fixed
    bottom 1px
    left 1px
    right 1px
    background #FFF
    border-top 1px solid #dadada
    padding 7px 20px

    span
    .button
    select
        display inline-block
        vertical-align middle

.footer__settings
    display block
    position absolute
    right 20px
    top 6px
    font-size 24px
    color #999

.footer__settings:hover
.footer__settings--active
    color #444
