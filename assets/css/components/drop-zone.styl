.drop-zone
    display block
    width 300px
    height @width
    margin 40px auto
    text-transform uppercase
    font-family 'poppins-bold', sans-serif
    position relative

.drop-zone__container
    position absolute
    top 0
    right 0
    left 0
    bottom 0
    z-index -1

.drop-zone__ring
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    background #b2cbd2

    &__icon
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        background none
        width 30px
        z-index 4

    &--inner
        width 100px
        height @width
        border-radius @width
        z-index 3

    &--middle
        opacity 0.6
        width 200px
        height @width
        border-radius @width
        z-index 2

    &--outer
        opacity 0.4
        width 300px
        height @width
        border-radius @width
        z-index 1

.drop-zone--dropping
    .drop-zone__ring
        &--inner
        &--middle
        &--outer
            animation-name pulse
            animation-duration 1s
            animation-iteration-count infinite
            animation-timing-function ease-in-out

.drop-zone--video-ready
    .drop-zone__ring
        &--inner
        &--middle
        &--outer
        &__icon
            animation-name zap
            animation-duration 1s
            animation-fill-mode both

.drop-zone--error
    .drop-zone__ring
        background-color #d25252

@keyframes pulse
    0%
        transform translate(-50%, -50%) scale(1)
    50%
        transform translate(-50%, -50%) scale(1.2)
    100%
        transform translate(-50%, -50%) scale(1)

@keyframes zap
    0%
        transform translate(-50%, -50%) scale(1)
    100%
        transform translate(-50%, -50%) scale(0)
        visibility none


