.file
    display none

select
    width 150px
    border 1px solid #dadada
    padding 5px 5px
    border-radius 4px

input
    width 150px
    border 1px solid #dadada
    padding 5px 15px
    font-size 16px
    border-radius 4px
    position relative

    &.error
        background #E54947
        color #FFF

    &.success
        background #E9FFD9

    &.full-width
        width 100%

    &.half-width
        width 50%

.settings-label
    font-size 14px

    .fa
        margin-right 10px

.form-margin
    margin-top 10px

.path-chooser
    margin-top 15px

    .text
        width 323px
        font-size 14px
        padding 9px 8px
        background #EEE
        color #666

        &.no-border
            border none
            margin-right 0
            margin-left 10px

.tickbox
    display inline-block
    width 50%
    margin-bottom 5px

    &.full-width
        width 100%

    input
        position absolute
        left -9999px

    input + label
        position relative
        padding-left 30px
        cursor pointer
        display inline-block
        height 20px
        line-height 20px
        font-size 14px
        user-select none

        &:before
            content ''
            position absolute
            top 0
            left 0
            width 18px
            height 18px
            z-index 0
            border 2px solid #5a5a5a
            border-radius 1px
            margin-top 2px
            transition 0.2s
            z-index 1

        &:after
        &:before
            content ''
            left 0
            position absolute
            border-radius 2px
            transition border .25s, background-color .25s, width .2s .1s, height .2s .1s, top .2s .1s, left .2s .1s
            z-index 1

    input:not(:checked)
        & + label:before
            width 0
            height 0
            border 3px solid transparent
            left 6px
            top 10px
            transform rotateZ(37deg)
            transform-origin 100% 100%

        & + label:after
            height 20px
            width 20px
            background-color transparent
            border 2px solid #5a5a5a
            top 0px
            z-index 0

    input:checked
        & + label:before
            top 0
            left 1px
            width 8px
            height 13px
            border-top 2px solid transparent
            border-left 2px solid transparent
            border-right 2px solid #fff
            border-bottom 2px solid #fff
            transform rotateZ(37deg)
            transform-origin 100% 100%

        & + label:after
            top 0px
            width 20px
            height 20px
            border 2px solid #649192
            background-color #649192
            z-index 0
