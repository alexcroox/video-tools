.footer
    position fixed
    bottom 1px
    height $headerHeight
    left 1px
    right 1px
    background #FFF
    border-top 1px solid #dadada
    padding 7px 20px 0

    span
    .button
    select
        display inline-block
        vertical-align middle

.footer__settings
    display inline-block
    float right
    font-size 24px
    color #999
    margin-top -2px

.footer__settings:hover
.footer__settings--active
    color #444
